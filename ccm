#!/bin/bash
# Claude Config Manager - Quick Launch Script
# Usage: ./ccm [command] [args...]

set -e

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
TOOL_DIR="$SCRIPT_DIR/tools/claude-config-manager"
VENV_DIR="$TOOL_DIR/.venv"

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Check if uv is available
check_uv() {
    if command -v uv &> /dev/null; then
        return 0
    else
        return 1
    fi
}

# Install the tool if not already installed
install_tool() {
    echo -e "${YELLOW}Installing Claude Config Manager...${NC}"

    cd "$TOOL_DIR"

    if check_uv; then
        echo "Using uv for installation..."
        uv venv "$VENV_DIR"
        source "$VENV_DIR/bin/activate"
        uv pip install -e .
    else
        echo "Using pip for installation..."
        python3 -m venv "$VENV_DIR"
        source "$VENV_DIR/bin/activate"
        pip install -e .
    fi

    echo -e "${GREEN}âœ“ Installation complete!${NC}"
    cd "$SCRIPT_DIR"
}

# Check if venv exists and tool is installed
if [ ! -d "$VENV_DIR" ]; then
    install_tool
fi

# Activate venv and run ccm
source "$VENV_DIR/bin/activate"

# Change to project root as default source
cd "$SCRIPT_DIR"

# Run the tool with all arguments
ccm "$@"
